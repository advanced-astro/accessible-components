---
interface Props {
  href?: string
  label: string
  currentPage?: boolean
}

const { href = '#', label = 'Breadcrumb', currentPage = false } = Astro.props
---

<li class="breadcrumbs__item">
  {currentPage ? <a href="" aria-current="page">{label}</a> : <a href={href}>{label}</a>}
</li>

<style is:global>
  .breadcrumbs__item {
    display: inline;
  }

  .breadcrumbs__item::after {
    content: '/';
    margin: 0 0.5rem;
  }

  .breadcrumbs__item:last-child::after {
    content: '';
  }

  .breadcrumbs__item a[aria-current]:not([aria-current="false"]) {
	color: var(--font-color);
	text-decoration: none;
  }

  .breadcrumbs__item a[aria-current]:not([aria-current="false"]):hover {
	color: var(--action-color-state);
  }
</style>
